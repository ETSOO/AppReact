{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */
        "target": "ES2020",
        "module": "ESNext",
        "allowJs": true,
        "moduleResolution": "Bundler",
        "isolatedModules": true,
        "outDir": "./lib",
        "noEmit": false,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
